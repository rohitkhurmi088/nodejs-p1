<!-- Display Added Products-list:-->
<link rel="stylesheet" href="/css/product-list.css" />



<!-- Display Added Products-->
<!---------------------------->
<!-- if there is product:(prods.length)>0 display it-->

<!--product card container-->
<% if(prods.length>0){ %>
<div class="grid">
	<!-- prods:shop.js , products:admin.js -->
	<%for(let product of prods){%>
	<article class="card product-item">
		<!--card-title-->
		<header class="card__header">
			<h1 class="product__title"><%=product.title%></h1>
		</header>
		<!--card--image-->
		<div class="card__image">
			<img src="<%=product.imageUrl%>" alt="<%= product.title %>" />
		</div>
		<!--card-content-->
		<div class="card__content">
			<h2 class="product__price">$<%=product.price%></h2>
			<p class="product__description"><%=product.description%></p>
		</div>
		<!--card-action-->
		<div class="card__actions">
            <a href="/admin/edit-product" class="btn">Edit</a>
            <!--delete button:should not be a link: not used for GET request-->
            <form action="/admin/delete-product" method="POST">
                <button class="btn">Add to Cart</button>
            </form>
		</div>
	</article>
	<%}%>
</div>
<%}else{%>
<h1>No Product Found!</h1>
<%}%>

<!-- we have added product-info here but it will work once we create routes & controllers 
to pass products-info to shop.js route-->